{
  "manifest_version": 3,
  "name": "Website Time Tracker",
  "version": "1.1",
  "description": "Track time spent on each website with idle time detection.",
  "permissions": ["tabs", "storage", "idle"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png"
  }
}
